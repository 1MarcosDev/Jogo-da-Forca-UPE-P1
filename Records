import random
import os


def Records(arquivo):
    if os.path.exists(arquivo):
        with open(arquivo, 'r') as file:
            records = [line.strip().split(' - ') for line in file.readline()]
    else:
        records = []
    return records

                       
def SalvarRecords(arquivo, records):
    with open(arquivo, 'w') as file:
        for record in records:
            file.write(' - ' .join(record) + '\n')


def AtualizarRecords(records, dificuldade, nick, Tentativas, vitorias=0):
    records.append([dificuldade, nick, str(Tentativas, str(vitorias))])  


def MostrarRecords(records):
    print('Records:')
    for record in records:
        print(f"Dificuldade: {record[0]}, Nick: {record[1]}, Tentativas: {record[2]}, Vit√≥rias: {record[3]}")                       
